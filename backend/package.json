{
  "name": "superinbox-core",
  "version": "0.1.0",
  "description": "SuperInbox Core Backend - A unified entry point for digital information with AI-powered intelligent routing",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "preinstall": "node scripts/check-node-version.cjs",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:api": "vitest tests/api",
    "lint": "eslint src --ext .ts",
    "db:migrate": "tsx src/storage/migrations/run.ts",
    "db:seed": "tsx src/storage/seeds/run.ts",
    "migrate:unknown-to-failed": "tsx src/scripts/migrate-unknown-to-failed.ts",
    "mcp": "tsx src/mcp/server.ts"
  },
  "keywords": [
    "inbox",
    "ai",
    "automation",
    "routing",
    "productivity"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@types/multer": "^2.0.0",
    "axios": "^1.6.5",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.2.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/form-data": "^2.2.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitest/coverage-v8": "^1.2.1",
    "eslint": "^8.56.0",
    "supertest": "^7.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "engines": {
    "node": ">=18.0.0 <23"
  }
}
